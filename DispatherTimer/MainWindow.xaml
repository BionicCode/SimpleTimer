<Window x:Class="DispatherTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DispatherTimer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="107*"/>
            <RowDefinition Height="327*"/>
        </Grid.RowDefinitions>
        <Label HorizontalAlignment="Center" Height="103" Margin="0,59,0,165" Width="427" 
               FontSize="70" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="1"
               x:Name="lblTime" Content="{Binding Path=CurrentTime}"/>
    </Grid>
</Window>
